                <div class="wrapper-slider-detail">
                  <div class="recipe-slider">
                    <div class="slider-detail2">
                      <% @recipe.photos.each do |photo| %>
                          <div>

                            <a href="<%= photo.banner.url(:slider) %>" class="swipebox" rel="recipe-gallery"><%= image_tag photo.banner.url(:slider) %></a>
                          </div>

                      <% end %>
                    </div>
                <span class="custom-arrows wider">
                    <span class="left-arrow slick-arrow" data-direction="prev" style="display: table-cell;"><i class="fa fa-arrow-left"></i></span>
                    <span class="right-arrow slick-arrow" data-direction="next" style="display: table-cell;"><i class="fa fa-arrow-right"></i></span>
                </span>
                  </div>

                  <ul class="recipe-specs-2">
                    <li><span>Yield : </span><%= @recipe.yield %></li>
                    <li><span>Servings : </span><%= @recipe.servings %></li>
                    <li><span>Prep Time : </span><%= @recipe.preparation_time %></li>
                    <li><span>Cook Time : </span><%= @recipe.cook_time %></li>
                    <li><span>Ready In : </span><%= @recipe.ready_in %></li>
                  </ul>
                </div>
                <%- if @recipe.video %>
                    <a href="<%= @recipe.video_link %>" class="swipebox slider-video-button">Watch Video</a>
                <% end -%>
              </div>
