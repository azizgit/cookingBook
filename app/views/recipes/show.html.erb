<div class="recipes-home-body inner-page">
  <div class="container">
    <div class="row">

      <div class="col-md-8 col-lg-9">
        <% if user_signed_in? %>
            <%= link_to 'Edit', edit_recipe_path(params[:id]), :class => 'btn btn-sm btn-default' %>
        <% end %>

